@model Consuming_WebAPI_MVC_App.Models.DTOs.ProductDTO

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">₹@Model.Selling_Price</dd>

    <dt class="col-sm-2">Stock Quantity</dt>
    <dd class="col-sm-10">@Model.StockQuantity</dd>

    <dt class="col-sm-2">Product Image</dt>
    <dd class="col-sm-10"><img src="@Model.ProductImageUrl" alt="@Model.Name" class="img-fluid" /></dd>
</dl>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
